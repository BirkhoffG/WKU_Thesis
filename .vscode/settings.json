{
    "latex-workshop.latex.recipes": [
      {
        "name": "pdflatex",
        "tools": [
          "pdflatex"
        ]
      },
      {
        "name": "latexmk",
        "tools": [
          "latexmk"
        ]
      },
      {
        "name": "pdflatex -> bibtex -> pdflatex*2",
        "tools": [
          "pdflatex",
          "bibtex",
          "pdflatex",
          "pdflatex"
        ]
      }
    ],
    
    "latex-workshop.latex.tools": [
      {
        "name": "texify",
        "command": "texify",
        "args": [
          "--synctex",
          "--pdf",
          "--tex-option=\"-interaction=nonstopmode\"",
          "--tex-option=\"-file-line-error\"",
          "%DOC%.tex"
        ]
      },
      {
          // 编译工具和命令
          "name": "xelatex",
          "command": "xelatex",
          "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOC%"
          ]
      },
      {
          "name": "pdflatex",
          "command": "pdflatex",
          "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOC%"
          ]
      },
      {
          "name": "bibtex",
          "command": "bibtex",
          "args": [
              "%DOCFILE%"
          ]
      }
    ],
    "editor.wordWrap": "on",
    "spellright.language": [
      "en"
    ],
    "spellright.documentTypes": [
      "markdown",
      "latex",
      "plaintext",
      "bibtex",
      "doctex"
    ],
    "spellright.parserByClass": {
      "bibtex": {
        "parser": "plain"
      }
    },
    
  }